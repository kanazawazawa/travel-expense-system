@page "/expenses"
@using Microsoft.JSInterop
@using TravelExpenseWebApp.Models
@using TravelExpenseWebApp.Services
@inject TravelExpenseApiService ApiService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@rendermode InteractiveServer

<PageTitle>旅費精算一覧</PageTitle>

<h1>旅費精算一覧</h1>

@if (isLoading)
{
    <p><em>読み込み中...</em></p>
}
else if (errorMessage != null)
{
    <div class="alert alert-danger">@errorMessage</div>
}
else
{
    <div class="mb-3">
        <button class="btn btn-primary" @onclick="NavigateToCreate">
            <i class="bi bi-plus-circle"></i> 新規登録
        </button>
        <button class="btn btn-secondary" @onclick="LoadData">
            <i class="bi bi-arrow-clockwise"></i> 更新
        </button>
        <button class="btn btn-warning" @onclick="RunFraudCheckForUncheckedOnly">
            <i class="bi bi-shield-exclamation"></i> 未チェック項目を一括検知
        </button>
        <button class="btn btn-danger" @onclick="RunFraudCheckForAllItems">
            <i class="bi bi-shield-fill"></i> 全項目を一括検知（再実行）
        </button>
    </div>

    @if (summary != null)
    {
        <div class="row mb-4">
            <div class="col-md-2">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">総申請数</h5>
                        <p class="card-text h3">@summary.TotalCount 件</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center text-warning">
                    <div class="card-body">
                        <h5 class="card-title">承認待ち</h5>
                        <p class="card-text h3">@summary.PendingCount 件</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center text-success">
                    <div class="card-body">
                        <h5 class="card-title">承認済み</h5>
                        <p class="card-text h3">@summary.ApprovedCount 件</p>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="card text-center text-danger">
                    <div class="card-body">
                        <h5 class="card-title">却下</h5>
                        <p class="card-text h3">@summary.RejectedCount 件</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center text-primary">
                    <div class="card-body">
                        <h5 class="card-title">総費用</h5>
                        <p class="card-text h3">@summary.TotalAmount.ToString("N0") 円</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>申請日</th>
                <th>申請者</th>
                <th>出張日</th>
                <th>出張先</th>
                <th>目的</th>
                <th>交通手段</th>
                <th>合計金額</th>
                <th>ステータス</th>
                <th>不正検知</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in expenses)
            {
                <tr>
                    <td>@expense.ApplicationDate.ToString("yyyy/MM/dd")</td>
                    <td>@expense.ApplicantName</td>
                    <td>@expense.TravelDate.ToString("yyyy/MM/dd")</td>
                    <td>@expense.Destination</td>
                    <td>@expense.Purpose</td>
                    <td>@expense.Transportation</td>
                    <td class="text-end">@expense.TotalAmount.ToString("N0") 円</td>
                    <td>
                        <span class="badge bg-@GetStatusBadgeClass(expense.Status)">
                            @expense.Status
                        </span>
                    </td>
                    <td>
                        @if (expense.FraudCheckCompleted == true)
                        {
                            <span class="badge bg-@GetFraudCheckBadgeClass(expense.FraudCheckResult)" 
                                  title="@expense.FraudCheckDetails"
                                  style="cursor: help;">
                                @GetFraudCheckDisplayText(expense.FraudCheckResult)
                            </span>
                            <button class="btn btn-sm btn-outline-secondary mt-1" 
                                    @onclick="() => RunFraudCheck(expense)"
                                    disabled="@isRunningFraudCheck">
                                <i class="bi bi-arrow-repeat"></i>
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-warning" 
                                    @onclick="() => RunFraudCheck(expense)"
                                    disabled="@isRunningFraudCheck">
                                <i class="bi bi-shield-exclamation"></i> チェック
                            </button>
                        }
                    </td>
                    <td>
                        <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteExpense(expense)">
                            <i class="bi bi-trash"></i> 削除
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<TravelExpenseResponse> expenses = new();
    private TravelExpenseSummary? summary;
    private bool isLoading = true;
    private bool isRunningFraudCheck = false;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
        
        Console.WriteLine($"データ読み込み完了: {expenses.Count}件");
        
        // 全件のチェック状態をログ出力
        Console.WriteLine("=== 全件のチェック状態 ===");
        foreach (var exp in expenses)
        {
            Console.WriteLine($"  [{exp.ApplicantName}] Completed={exp.FraudCheckCompleted}, Result={exp.FraudCheckResult}, Details={exp.FraudCheckDetails?.Substring(0, Math.Min(50, exp.FraudCheckDetails?.Length ?? 0))}");
        }
        
        // 初回表示時に未チェックの項目をバックグラウンドで自動チェック
        var uncheckedExpenses = expenses.Where(e => e.FraudCheckCompleted != true).ToList();
        
        Console.WriteLine($"未チェック項目: {uncheckedExpenses.Count}件");
        foreach (var exp in uncheckedExpenses.Take(3))
        {
            Console.WriteLine($"  - {exp.ApplicantName}: FraudCheckCompleted={exp.FraudCheckCompleted}");
        }
        
        if (uncheckedExpenses.Count > 0)
        {
            Console.WriteLine($"初期化完了 - {uncheckedExpenses.Count}件の不正検知をバックグラウンドで開始");
            await RunFraudCheckForUnchecked();
        }
        else
        {
            Console.WriteLine("初期化完了 - 未チェック項目なし");
        }
    }

    private async Task LoadData()
    {
        try
        {
            isLoading = true;
            errorMessage = null;
            expenses = await ApiService.GetAllExpensesAsync();
            summary = await ApiService.GetSummaryAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"データの読み込みに失敗しました: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/expenses/create");
    }

    private async Task DeleteExpense(TravelExpenseResponse expense)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"{expense.ApplicantName}さんの{expense.Destination}への出張申請を削除しますか？"))
        {
            try
            {
                var partitionKey = expense.ApplicationDate.ToString("yyyy-MM");
                await ApiService.DeleteExpenseAsync(partitionKey, expense.Id);
                await LoadData();
            }
            catch (Exception ex)
            {
                errorMessage = $"削除に失敗しました: {ex.Message}";
            }
        }
    }

    private async Task RunFraudCheck(TravelExpenseResponse expense)
    {
        try
        {
            isRunningFraudCheck = true;
            errorMessage = null;
            StateHasChanged();

            await RunFraudCheckInternal(expense);
        }
        catch (Exception ex)
        {
            errorMessage = $"不正検知に失敗しました: {ex.Message}";
            Console.WriteLine($"不正検知エラー: {ex}");
            await JSRuntime.InvokeVoidAsync("alert", $"エラー: {ex.Message}");
        }
        finally
        {
            isRunningFraudCheck = false;
            StateHasChanged();
        }
    }

    private async Task RunFraudCheckForUnchecked()
    {
        var uncheckedExpenses = expenses.Where(e => e.FraudCheckCompleted != true).ToList();
        
        if (uncheckedExpenses.Count == 0)
        {
            return;
        }

        await RunFraudCheckForList(uncheckedExpenses);
    }

    private async Task RunFraudCheckForList(List<TravelExpenseResponse> targetExpenses)
    {
        if (targetExpenses.Count == 0)
        {
            return;
        }

        Console.WriteLine($"一括不正検知開始: {targetExpenses.Count}件");
        
        // バックグラウンドで非同期処理（await しない）
        _ = Task.Run(async () =>
        {
            foreach (var expense in targetExpenses)
            {
                try
                {
                    await RunFraudCheckInternalBackground(expense);
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"不正検知エラー (ID={expense.Id}): {ex.Message}");
                }
            }
            
            Console.WriteLine($"一括不正検知完了: {targetExpenses.Count}件");
        });
    }

    private async Task RunFraudCheckInternal(TravelExpenseResponse expense)
    {
        try
        {
            var partitionKey = expense.ApplicationDate.ToString("yyyy-MM");
            
            Console.WriteLine($"不正検知開始: PartitionKey={partitionKey}, RowKey={expense.Id}");
            
            var updatedExpense = await ApiService.RunFraudCheckAsync(partitionKey, expense.Id);

            // リスト内の該当項目を更新
            var index = expenses.FindIndex(e => e.Id == expense.Id);
            if (index >= 0)
            {
                expenses[index] = updatedExpense;
                Console.WriteLine($"不正検知完了: Result={updatedExpense.FraudCheckResult}");
                
                // UI更新
                await InvokeAsync(StateHasChanged);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"不正検知エラー (ID={expense.Id}): {ex.Message}");
        }
    }

    private async Task RunFraudCheckInternalBackground(TravelExpenseResponse expense)
    {
        var partitionKey = expense.ApplicationDate.ToString("yyyy-MM");
        
        Console.WriteLine($"[バックグラウンド] 不正検知開始: {expense.ApplicantName} - {expense.Destination}");
        
        var updatedExpense = await ApiService.RunFraudCheckAsync(partitionKey, expense.Id);

        // リスト内の該当項目を更新（UIスレッドで実行）
        await InvokeAsync(() =>
        {
            var index = expenses.FindIndex(e => e.Id == expense.Id);
            if (index >= 0)
            {
                expenses[index] = updatedExpense;
                Console.WriteLine($"[バックグラウンド] 不正検知完了: {expense.ApplicantName} - Result={updatedExpense.FraudCheckResult}");
                StateHasChanged();
            }
        });
    }

    private async Task RunFraudCheckForUncheckedOnly()
    {
        Console.WriteLine($"未チェック項目の一括チェック開始: 総件数={expenses.Count}件");
        
        var uncheckedExpenses = expenses.Where(e => e.FraudCheckCompleted != true).ToList();
        var uncheckedCount = uncheckedExpenses.Count;
        
        Console.WriteLine($"未チェック項目: {uncheckedCount}件");
        foreach (var exp in uncheckedExpenses.Take(3))
        {
            Console.WriteLine($"  - {exp.ApplicantName} ({exp.Destination}): FraudCheckCompleted={exp.FraudCheckCompleted}");
        }
        
        if (uncheckedCount == 0)
        {
            await JSRuntime.InvokeVoidAsync("alert", "未チェックの項目はありません。");
            return;
        }
        
        if (!await JSRuntime.InvokeAsync<bool>("confirm", 
            $"未チェックの項目（{uncheckedCount}件）に対して不正検知をバックグラウンドで実行します。\n" +
            "完了したものから順次結果が表示されます。\nよろしいですか？"))
        {
            return;
        }

        await RunFraudCheckForList(uncheckedExpenses);
        
        // 処理開始を通知
        await JSRuntime.InvokeVoidAsync("alert", 
            $"{uncheckedCount}件の不正検知をバックグラウンドで開始しました。\n" +
            "完了したものから順次画面に反映されます。");
    }

    private async Task RunFraudCheckForAllItems()
    {
        Console.WriteLine($"全項目の一括チェック開始: 総件数={expenses.Count}件");
        
        if (expenses.Count == 0)
        {
            await JSRuntime.InvokeVoidAsync("alert", "チェックする項目がありません。");
            return;
        }
        
        if (!await JSRuntime.InvokeAsync<bool>("confirm", 
            $"全項目（{expenses.Count}件）に対して不正検知をバックグラウンドで実行します。\n" +
            "※既にチェック済みの項目も再実行されます。\n" +
            "完了したものから順次結果が表示されます。\nよろしいですか？"))
        {
            return;
        }

        await RunFraudCheckForList(expenses.ToList());
        
        // 処理開始を通知
        await JSRuntime.InvokeVoidAsync("alert", 
            $"{expenses.Count}件の不正検知をバックグラウンドで開始しました。\n" +
            "完了したものから順次画面に反映されます。");
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "承認済み" => "success",
            "却下" => "danger",
            "申請中" => "warning",
            _ => "secondary"
        };
    }

    private string GetFraudCheckBadgeClass(string? result)
    {
        return result switch
        {
            "OK" => "success",
            "WARNING" => "warning",
            "ERROR" => "danger",
            _ => "secondary"
        };
    }

    private string GetFraudCheckDisplayText(string? result)
    {
        return result switch
        {
            "OK" => "正常",
            "WARNING" => "要注意",
            "ERROR" => "異常",
            _ => "未実施"
        };
    }

}
